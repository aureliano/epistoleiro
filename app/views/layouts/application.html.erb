<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/xhtml" xml:lang="<%= I18n.locale %>">
<head>
  <title><%= ENV['APP_NAME'] %></title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>

  <%= stylesheet_link_tag 'bootstrap.min' %>
  <%= stylesheet_link_tag 'application' %>
</head>
<body>
  <div name="body-container" class="container">
    <div class="row">
      <div class="span9"><h2><%= ENV['APP_NAME'] %></h2></div>
      <div class="span3" align="right">
        <br/>
        <a href="<%= url :user, :profile, :nickname => session[:user_nickname] %>">
          <%= gravatar_image_tag :email => session[:user_id], :size => 20 %>
          <b><%= session[:user_nickname] %></b>
        </a>
        <a href="<%= url :sign_out %>" class="btn"><%= I18n.translate 'sign_out' %></a>
      </div>
    </div>

    <hr/>

  	<% if has_system_message? %>
      <%= show_messages.html_safe %>
    <% end %>

    <%= yield %>
  </div>
  <%= javascript_include_tag 'jquery.min' %>
  <%= javascript_include_tag 'bootstrap.min' %>
</body>
</html>